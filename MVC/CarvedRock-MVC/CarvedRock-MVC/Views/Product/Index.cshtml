@using CarvedRock_MVC.Data
@model IEnumerable<CarvedRock_MVC.Data.Product>

<div class="row">
    <h4 class="mb-3 ml-5">Today's specials:</h4>
</div>

@if (Model == null)
{
    <h5>No products today!</h5>
}
else
{
    @foreach (var product in Model)
    {
        <div class="row mb-4">
            <div class="col-2 text-center"><img height="80" src="Images/@product.PhotoFileName" 
                alt="Product image" /></div>
            <div class="col-2 my-auto">@product.Name</div>
            <div class="col-2 my-auto">$@product.Price</div>
            <div class="col-2 my-auto">@product.Stock in stock</div>
        </div>
    }

    <div class="row">
        <div class="ml-5 mt-3">
            <a asp-action="Create">New product</a>
        </div>
    </div>
}